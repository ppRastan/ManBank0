<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="DepositTabs.DepositCards">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="درخواست صدور کارت"
        android:id="@+id/button5"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="تغییر وضعیت کارت"
        android:id="@+id/button6"
        android:layout_gravity="center"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="فهرست کارت ها"
        android:id="@+id/button7"
        android:layout_gravity="center"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="مشاهده گردش کارت"
        android:id="@+id/button8"
        android:layout_gravity="center"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ابطال کارت"
        android:id="@+id/button9"
        android:layout_gravity="center"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="تعیین سقف برداشت کارت"
        android:id="@+id/button10"
        android:layout_gravity="center"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
